<div class="container">
<p>フェス一覧</p>

<table class="table">
  <tr>
    <th>
      <p>フェス名</p>
    </th>
    <th>
      <p>日時</p>
    </th>
    <th>
      <p>会場</p>
    </th>
    <th>
    </th>
  </tr>
  <% @fes.each do |fes| %>
  <tr>
    <td>
      <%= link_to fe_path(fes.id) do %>
      <%= fes.fes_name %>
    </td>
    <td>
      <%= fes.fes_day.strftime('%Y/%m/%d') %>
    </td>
    <td>
    	<%= Place.find(fes.place_id).place %>
    </td>
    <% end %>
    <td>
      <%= link_to "詳細", fe_path(fes.id) %>
      <% if current_admin%>
      <%= link_to "編集", edit_fe_path(fes.id) %>
      <%= link_to "削除", fe_path(fes.id), method: :delete, data: { confirm: "削除してよろしいですか？" } %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>

<% if current_admin %>
<%= link_to "フェス新規登録", new_fe_path %>
<%= link_to "フェス会場管理", new_place_path %>
<% end %>

<%= link_to "戻る", root_path %>
</div>
