
<header id="luxbar" class="luxbar-fixed-bottom">
    <input type="checkbox" class="luxbar-checkbox" id="luxbar-checkbox"/>
    <div class="luxbar-menu luxbar-menu-left luxbar-menu-dark">
        <ul class="luxbar-navigation" style="background-color: #000000;">
            <li class="luxbar-header">
                <label class="luxbar-hamburger luxbar-hamburger-spin"
                id="luxbar-hamburger" for="luxbar-checkbox"> <span></span> </label>
            </li>

          <% if admin_signed_in? %>
          <li class="luxbar-item">
            <%= link_to "Top", root_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "About", about_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "Artist", artists_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "Fes", fes_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "Users", users_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "Contact", messages_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "Logout", destroy_admin_session_path, method: :delete %>
          </li>


          <% elsif user_signed_in? %>
          <li class="luxbar-item">
            <%= link_to "Top", root_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "About", about_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "Artist", artists_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "Fes", fes_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "Mypage", user_path(current_user) %>
          </li>
          <li class="luxbar-item">
            <%= link_to "Favorite", favorites_list_path(current_user) %>
          </li>
          <li class="luxbar-item">
            <%= link_to "Contact", new_message_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "Logout", destroy_user_session_path, method: :delete %>
          </li>


          <% else %>
            <li class="luxbar-item">
            <%= link_to "Top", root_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "About", about_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "Artist", artists_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "Fes", fes_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "Contact", new_message_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "Login", new_user_session_path %>
          </li>
          <li class="luxbar-item">
            <%= link_to "Signup", new_user_registration_path %>
          </li>
          <% end %>
        </ul>
  </div>
</header>

